{% extends 'AppBundle::applayout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block filterBlock %}{% endblock filterBlock %}
{% block pageTitle %}{{ 'header.dashboard'|trans }}{% endblock pageTitle %}
{% block pageMenu %}{% endblock pageMenu %}

{% block content %}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Emails</h3>
        </div>
        <div class="panel-body">
          Mindpool manages 7 emailboxes!
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Domains</h3>
        </div>
        <div class="panel-body">
          Mindpool manages 23 domains!
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Users</h3>
        </div>
        <div class="panel-body">
          Mindpool has {{ usersEnabled }} enabled
          and {{ usersDisabled }} disabled user(s)!
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
